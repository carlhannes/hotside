{
  "name": "hotside",
  "version": "0.1.1",
  "description": "Hot sideloading of javascript code in a browser without serving any files",
  "main": "dist/web.js",
  "bin": {
    "hotside": "dist/cli.js"
  },
  "files": [
    "/dist"
  ],
  "scripts": {
    "build": "rollup -c -n cli -f cjs & rollup -c -n web",
    "build:watch": "rollup -w -c -n cli -f cjs & rollup -w -c -n web"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carlhannes/hotside.git"
  },
  "keywords": [
    "hmr",
    "hot",
    "sideload",
    "hot",
    "module",
    "replacement",
    "websocket"
  ],
  "author": "carlhannes",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/carlhannes/hotside/issues"
  },
  "homepage": "https://github.com/carlhannes/hotside#readme",
  "dependencies": {
    "express": "^4.16.2",
    "express-ws": "^3.0.0",
    "watch": "^1.0.2"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "eslint": "^4.18.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.9.0",
    "rollup": "^0.56.3",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-commonjs": "^8.3.0",
    "rollup-plugin-filesize": "^1.5.0",
    "rollup-plugin-node-resolve": "^3.0.3",
    "rollup-watch": "^4.3.1",
    "run-script": "^0.1.1"
  }
}
